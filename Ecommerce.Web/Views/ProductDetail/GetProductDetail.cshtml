@*@model Ecommerce.Service.ViewModels.ProductDetail.ProductDetailModel*@
@{
    ViewData["Title"] = "GetProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="bread">
                    <span>
                        <a href="index.html">
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">Trang chủ</font>
                            </font>
                        </a>
                    </span>
                    <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;"> /</font>
                    </font><span>
                        <font style="vertical-align: inherit;">
                            <font style="vertical-align: inherit;"> Chi tiết sản phẩm</font>
                        </font>
                    </span>
                </p>
            </div>
        </div>
    </div>
</div>


<div class="product-simple-area">
    <div class="container">
        <div class="row row-pb-lg product-detail-wrap">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="single-product-image">
                    <div class="single-product-tab">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist">
                            @foreach (var item in ViewBag.ProductImage)
                            {
                                @if (item.IsMainImage == true)
                                {
                                    <div class="ProductDetailImage">
                                        <li role="presentation" class="active">
                                            <a href="#@item.Id" aria-controls="home" role="tab"
                                               data-toggle="tab"><img alt="" src="~/images/@item.ImageLink"></a>
                                        </li>
                                    </div>
                                }
                                else
                                {
                                    <li role="presentation">
                                        <a href="#@item.Id" aria-controls="home" role="tab"
                                           data-toggle="tab"><img alt="" src="~/images/@item.ImageLink"></a>
                                    </li>
                                }
                            }
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            @foreach (var item in ViewBag.ProductImage)
                            {
                                @if (item.IsMainImage == true)
                                {
                                    <div role="tabpanel" class="tab-pane active " id="@item.Id">
                                        <img alt=""
                                             src="~/images/@item.ImageLink">
                                    </div>
                                }
                                else
                                {
                                    <div role="tabpanel" class="tab-pane" id="@item.Id">
                                        <img alt=""
                                             src="~/images/@item.ImageLink">
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="single-product-info">
                    <h1 class="product_title">@ViewBag.Products.Name</h1>
                    <div class="price-box">
                        <span class="new-price">@Math.Round(@ViewBag.Products.DiscountPrice, 0) đ</span>
                        <span class="old-price">@Math.Round(@ViewBag.Products.Price, 0) đ</span>
                    </div>
                    <div class="pro-rating">
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                    </div>
                    <div class="short-description">
                        <p>
                            @ViewBag.Products.ShortDescription
                        </p>
                    </div>
                    <form>
                        <div class="swatch clearfix">
                            <div class="header">Kích thước</div>
                            @foreach (var item in ViewBag.ProductSize)
                            {
                                <div data-value="@item.Id" class="swatch-element">
                                    <input id="@item.Id" type="radio" name="productSizeId" value="@item.Size" />
                                    <label for="@item.Id">
                                        @item.Size
                                    </label>
                                </div>
                            }

                        </div>
                        <div class="input-group mb-4">
                            <span class="input-group-btn">
                                <button type="button" class="quantity-left-minus btn" data-type="minus"
                                        data-field="">
                                    <i class="icon-minus2"></i>
                                </button>
                            </span>
                            <input type="text" id="quantity" name="quantity" class="form-control input-number"
                                   value="1" min="1" max="100">
                            <span class="input-group-btn ml-1">
                                <button type="button" class="quantity-right-plus btn" data-type="plus"
                                        data-field="">
                                    <i class="icon-plus2"></i>
                                </button>
                            </span>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <p class="addtocart">
                                    <button type="submit" class="btn btn-primary btn-addtocart">
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;"> Thêm vào giỏ hàng</font>
                                        </font>
                                    </button>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-md-12 pills">
                        <div class="bd-example bd-example-tabs">
                            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

                                <li class="nav-item">
                                    <a class="nav-link active" id="pills-description-tab" data-toggle="pill"
                                       href="#pills-description" role="tab" aria-controls="pills-description"
                                       aria-expanded="true">
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">Mô Tả Sản Phẩm</font>
                                        </font>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="pills-review-tab" data-toggle="pill"
                                       href="#pills-review" role="tab" aria-controls="pills-review"
                                       aria-expanded="true">
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">Đánh Giá</font>
                                        </font>
                                    </a>
                                </li>
                            </ul>

                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane border fade show active" id="pills-description"
                                     role="tabpanel" aria-labelledby="pills-description-tab">
                                    <p>
                                        @ViewBag.Products.Description
                                    </p>
                                </div>

                                <div class="tab-pane border fade" id="pills-review" role="tabpanel"
                                     aria-labelledby="pills-review-tab">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h3 class="head">23 Reviews</h3>
                                            <div class="form-group" id="rating-ability-wrapper">
                                                <div class="label-rating">
